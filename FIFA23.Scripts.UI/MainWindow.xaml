        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFA23.Scripts.UI"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="FIFA23.Scripts.UI.MainWindow"
        mc:Ignorable="d"
        Title="FIFA 23 Career Mode Scripts" Height="362" Width="457" Background="#FFEDE7E7" WindowCornerPreference="Default" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" ExtendsContentIntoTitleBar="False" Icon="/icons8-script-64.png" >

    <Grid Background="#FFF7F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.41*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.5*" />


        </Grid.RowDefinitions>


        <Menu Grid.Row="0" Grid.ColumnSpan="2" Height="48" Name="menu1" Width="495" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1,1,1,1" RenderTransformOrigin="0.817,7.003" Foreground="#FFF9F9F9" Background="#FF39393A" Margin="0,0,3,0" ClipToBounds="True">
            <ui:MenuItem x:Name="File" Header="_File" Margin="10,0,0,0" VerticalAlignment="Top"  Background="#FFFBFBFB">
                <ui:MenuItem x:Name="OpenButton" Header="_Open" Click="OpenButton_Click"/>
                <ui:MenuItem x:Name="SaveButton" Header="_Save" Click="SaveButton_Click" />
            </ui:MenuItem>
            <ui:MenuItem x:Name="ExitButton" Header="_Exit" Margin="10,0,0,0" Click="ExitButton_Click" />

        </Menu>

        <StackPanel Grid.ColumnSpan="2" Orientation="Vertical"  Grid.Row="1" Margin="0,10,0,0">
            
            <Grid Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="Set All Players Age TO 15 (User team)"  Grid.Column="0" Grid.ColumnSpan ="2"  Foreground="#FF39393A" FontFamily="Algerian"   VerticalContentAlignment="Center"  FontSize="10" Margin="20,0,0,0"/>
                <ui:Button x:Name="ApplyButtonOverAllScript"    Grid.Column="1" Content="Apply" Height="32" Width="90" Appearance="Info" Background="#FF39393A" FontFamily="Algerian" Click="ApplyButtonOverAllScript_Click"  />
            </Grid>
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="Set All Players Overall to 99 (User team)"  Grid.Column="0" Grid.ColumnSpan ="2"  Foreground="#FF39393A" FontFamily="Algerian"   VerticalContentAlignment="Center"  FontSize="10" Margin="20,0,0,0"/>
                <ui:Button x:Name="ApplyButtonAgeScript"   Grid.Column="1" Content="Apply" Height="32" Width="90" Appearance="Info" Background="#FF39393A" FontFamily="Algerian" Click="ApplyButtonAgeScript_Click"  />
            </Grid>




        </StackPanel>

        <Label Grid.Column ="0" Grid.Row="2" Content="Status"  Margin="52,15,136,15"  Foreground="#FFB6B6D8" Height="29" FontFamily="Algerian" VerticalContentAlignment="Center" FontSize="9"/>
        <ui:TextBox x:Name="statusTextBox" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="98,0,0,0" TextWrapping="Wrap" Width="299" Background="#FFB99696" Height="34" OverridesDefaultStyle="True" IsReadOnly="True" ClearButtonEnabled="False" MinWidth="300" MaxWidth="302" ScrollViewer.CanContentScroll="True" UseLayoutRounding="True" Foreground="WhiteSmoke" FontSize="12" FontFamily="Arial" RenderTransformOrigin="0.5,0.5"/>





    </Grid>
